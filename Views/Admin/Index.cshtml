                </div>
            </nav>

            <!-- Main content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div id="content">
                    <div id="userInfo" class="content-section">
                        <h2>User Information</h2>
                        <button class="btn btn-primary" onclick="handleAction('addUser')">Add User</button>
                        <button class="btn btn-secondary" onclick="handleAction('editUser')">Edit User</button>
                        <button class="btn btn-danger" onclick="handleAction('deleteUser')">Delete User</button>
                        <!-- User Info Content -->
                    </div>
                    <div id="regionInfo" class="content-section" style="display: none;">
                        <h2>Region Information</h2>
                        <button class="btn btn-primary" onclick="handleAction('addRegion')">Add Region</button>
                        <button class="btn btn-secondary" onclick="handleAction('editRegion')">Edit Region</button>
                        <button class="btn btn-danger" onclick="handleAction('deleteRegion')">Delete Region</button>
                        <!-- Region Info Content -->
                    </div>
                    <div id="landmarkInfo" class="content-section" style="display: none;">
                        <h2>Landmark Information</h2>
                        <button class="btn btn-primary" onclick="handleAction('addLandmark')">Add Landmark</button>
                        <button class="btn btn-secondary" onclick="handleAction('editLandmark')">Edit Landmark</button>
                        <button class="btn btn-danger" onclick="handleAction('deleteLandmark')">Delete Landmark</button>
                        <!-- Landmark Info Content -->
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        function showContent(sectionId) {
            // Hide all content sections
            document.querySelectorAll('.content-section').forEach(function (section) {
                section.style.display = 'none';
            });

            // Show the selected section
            document.getElementById(sectionId).style.display = 'block';
        }

        function handleAction(action) {
            // Placeholder function to handle actions
            alert('Action: ' + action);
        }
    </script>
</body>