@using ScratchWorld.ViewModels
@model RegisterVeiwModel

<head>
    <style>
        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: 0 auto;
        }

            .form-signin .checkbox {
                font-weight: 400;
            }

            .form-signin .form-control {
                position: relative;
                box-sizing: border-box;
                height: auto;
                padding: 10px;
                font-size: 16px;
                margin-top: 10px;
            }

                .form-signin .form-control:focus {
                    z-index: 2;
                }

        .btn-block {
            margin-top: 20px;
            display: block;
            width: 100%;
        }
    </style>
</head>


<form asp-action="Register" class="form-signin text-center mt-3">
    <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h3>Sign in</h3>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
    <input asp-for="UserName" type="text" class="form-control" placeholder="User name" required autofocus>
    <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required>
    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
    <input asp-for="ConfirmPassword" type="password"  class="form-control" placeholder="Confirm password" required>
    <input asp-for="Age" type="number" value="null" class="form-control" placeholder="Age" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>