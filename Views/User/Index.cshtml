@using ScratchWorld.ViewModels
@model DetailViewModel


<link rel="stylesheet" href="/css/User.css"  />
<div class="container">
    <div class="row">
            <div class="card">
                <div class="card-body pb-0">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <div class="text-center border-end">
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="img-fluid avatar-xxl rounded-circle" alt="">
                                <h4 class="text-primary font-size-20 mt-3 mb-2">@Model.UserName</h4>
                                <h5 class="text-muted font-size-13 mb-0">@Model.Name</h5>
                            </div>
                        </div><!-- end col -->
                        <div class="col-md-6">
                            <div class="ms-3">
                                <div>
                                    <h4 class="card-title mb-5 mt-4">User page</h4>
                                </div>
                                <div class="row my-4">
                                    <div class="col-md-12">
                                        <div>
                                            <p class="text-muted mb-2 fw-medium ">
                                                Email: @Model.Email
                                            </p>
                                            <p class="text-muted fw-medium mb-2">
                                                Phone: @Model.PhoneNumber
                                            </p>
                                            <p class="mb-5 text-muted fw-medium">
                                                Age: @Model.Age
                                            </p>
                                        </div>
                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div>
                        </div><!-- end col -->
                    <div class="col-md-3 text-center">
                        <div>
                            <a class="btn btn-outline-primary my-3" asp-area="" asp-controller="User" asp-action="AddData">Add information</a>
                        </div>
                        <div>
                            <a class="btn btn-outline-primary" asp-area="" asp-controller="User" asp-action="EditUser">Change login and Password</a>
                        </div>
                        
                    </div>
                    </div><!-- end row -->
                </div><!-- end card body -->
            </div><!-- end card -->
    </div>
</div>